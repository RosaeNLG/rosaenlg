  //- past participle agreements
  l #[+verb(getAnonMS(), {verb:'venire', aux:'ESSERE', tense:'PASSATO_PROSSIMO', agree: getAnonMS()})]
  l #[+verb(getAnonMP(), {verb:'venire', aux:'ESSERE', tense:'PASSATO_PROSSIMO', agree: getAnonMP()})]
  l #[+verb(getAnonFS(), {verb:'venire', aux:'ESSERE', tense:'PASSATO_PROSSIMO', agree: getAnonFS()})]
  l #[+verb(getAnonFP(), {verb:'venire', aux:'ESSERE', tense:'PASSATO_PROSSIMO', agree: getAnonFP()})]

  //- universal tenses
  l #[+verb(getAnonMS(), {verb:'mangiare', tense:'UNIVERSAL_FUTURE'})]

