mixin verb(subject, verbInfo, params)
  - util.sentenceManager.verb(subject, verbInfo, params);

mixin subjectVerb(subject, verbInfo, params)
  - util.sentenceManager.subjectVerb(subject, verbInfo, params);

mixin subjectVerbAdj(subject, verbInfo, adjective, params)
  - util.sentenceManager.subjectVerbAdj(subject, verbInfo, adjective, params);

mixin verbPart()
  - util.verbsManager.popVerbPartInBuffer();

mixin verbPrefix()
  - util.verbsManager.popVerbPrefixInBuffer();

mixin sentence(params)
  - util.sentenceManager.sentence(params);
