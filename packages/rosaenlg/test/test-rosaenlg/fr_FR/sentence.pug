t
  //- base + full of pronouns
  l #[+sentence(sentencePommes)].
  l #[+sentence(sentencePommes)].

  //- must do exactly the same
  - resetRep(SUJET_JARDINIER);
  - resetRep(COD_POMMES);
  - resetRep(COI_VOISINE);
  l #[+sentence(sentencePommes)].
  l #[+sentence(sentencePommes)].

  //- only COI pronoun
  - resetRep(COD_POMMES);
  l #[+sentence(sentencePommes)].

  //- only COD pronoun
  - resetRep(COI_VOISINE);
  l #[+sentence(sentencePommes)].

  //- no subject
  -
    const sentencePommesNoSubject = {...sentencePommes};
    sentencePommesNoSubject.subjectGroup = {... sentencePommes.subjectGroup};
    sentencePommesNoSubject.subjectGroup.noSubject = true;
  l #[+sentence(sentencePommesNoSubject)].

  //- invert cod and coi
  - resetRep(SUJET_JARDINIER);
  - resetRep(COD_POMMES);
  - resetRep(COI_VOISINE);
  -
    const sentencePommesInverted = {...sentencePommes};
    sentencePommesInverted.objGroups.reverse();
  l #[+sentence(sentencePommesInverted)].
  l #[+sentence(sentencePommesInverted)].

  //- new sentence
  l #[+sentence(sentenceCodOnly)].
  l #[+sentence(sentenceCodOnly)].

  //- corbillard
  l #[+sentence(sentenceCorbillard)].
  l #[+sentence(sentenceCorbillard)].

  //- new sentence
  l #[+sentence(sentenceCoiOnly)].
  l #[+sentence(sentenceCoiOnly)].

  //- new sentence
  l #[+sentence(sentenceAvoirAuto)].
  l #[+sentence(sentenceAvoirAuto)].

  //- new sentence
  l #[+sentence(sentenceConj)].

  //- new sentence
  l #[+sentence(sentence2Coi)].
  - resetRep(COI_LECON);
  l #[+sentence(sentence2Coi)].

  //- leur
  - resetRep(COD_POMMES);
  l #[+sentence(sentenceVoisins)].
  l #[+sentence(sentenceVoisins)].

  //- EDGE CASES

  //- no verb
  -
    const sentenceVoisinsNoVerb = {... sentenceVoisins};
    sentenceVoisinsNoVerb.verbalGroup = null;
  l #[+sentence(sentenceVoisinsNoVerb)].

  //- no preposition
  -
    const sentence2CoiNoPrep = { ... sentence2Coi};
    //- we change the original object, which is not so good
    sentence2CoiNoPrep.objGroups[0].preposition = null;
    sentence2CoiNoPrep.objGroups[1].preposition = null;
  - resetRep(COI_LECON);
  - resetRep(COI_FRERE);
  l #[+sentence(sentence2CoiNoPrep)].

  //- pronominal
  l #[+sentence(sentencePronominal)].
