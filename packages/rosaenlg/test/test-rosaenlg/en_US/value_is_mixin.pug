- util.rawExpected = '<div><h1>Title 1</h1><h1>Title 2</h1><h1>Bla</h1></div>';

//- sub mixin
mixin title2()
  | title 2

mixin title3(param)
  | #[+value(param)]

//- main mixins
mixin printTitle(textContent)
  h1
    +value(textContent)

mixin printTitleWithParam(textContent, param)
  h1
    +value(textContent, param)

div
  //- print titles generically
  +printTitle("title 1")
  +printTitle(title2)
  +printTitleWithParam(title3, 'bla')
