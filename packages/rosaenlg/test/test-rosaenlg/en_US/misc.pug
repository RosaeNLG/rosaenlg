-
  util.expected = `
    Bla…
    bxlabla
    bylabla
    rbla
    lbla
    Some Uppercase

    singular
    plural
    a
  `;

t
  l bla #{'\u2026'}
  l bxla #[+eatSpace()] bla
  l byla
    | #[+eatSpace()]
    | bla
  l #[+eatSpace()] rbla
  l lbla #[+eatSpace()]

  l
    itemz {}
      item
        | #[+uppercaseWords('some uppercase')]
        //- edge cases
        | #[+uppercaseWords('')]
        | #[+uppercaseWords]

  - var PRODUCT = {pro:'duct'};
  l
    - setRefNumber(PRODUCT, 'S');
    | #{getSorP(['singular','plural'], PRODUCT)}
  l
    - setRefNumber(PRODUCT, 'P');
    | #{getSorP(['singular','plural'], PRODUCT)}
  l
    itemz {}
      item
        | #[+syn('a', 'b')]

